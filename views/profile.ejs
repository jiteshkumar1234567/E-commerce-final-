<%- include('./partials/header') %>

<section class="min-h-screen flex items-center justify-center
                bg-gradient-to-br from-indigo-700 via-purple-700 to-pink-600
                text-white px-6">

  <div class="w-full max-w-3xl glass-card p-10 mt-20  shadow-2xl backdrop-blur-md">

    <h1 class="text-4xl font-extrabold mb-8 tracking-tight text-center">
      My Profile <span class="text-yellow-400">.</span>
    </h1>

    <form action="/users/profile/update" method="POST" class="space-y-6">

      <!-- Name -->
      <div>
        <label class="block mb-2 text-white/70">Name</label>
        <input type="text" name="name"
               value="<%= user?.fullname || '' %>"
               class="w-full px-5 py-3 rounded-2xl bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition">
      </div>

      <!-- Email (read-only) -->
      <div>
        <label class="block mb-2 text-white/70">Email</label>
        <input type="email" disabled
               value="<%= user?.email || '' %>"
               class="w-full px-5 py-3 rounded-2xl bg-white/5 text-white/60 border border-white/20">
      </div>

      <!-- Phone -->
      <div>
        <label class="block mb-2 text-white/70">Contact No.</label>
        <input type="text" name="contact"
               value="<%= user?.contact || '' %>"
               class="w-full px-5 py-3 rounded-2xl bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition">
      </div>

      <!-- Address -->
      <div>
        <label class="block mb-2 text-white/70">Address</label>
        <textarea name="address"
                  class="w-full px-5 py-3 rounded-2xl bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition"><%= user?.address || '' %></textarea>
      </div>

      <!-- Update Button -->
      <button
        class="w-full px-12 py-4 rounded-2xl font-bold
               bg-gradient-to-r from-yellow-300 to-orange-400
               text-zinc-900 hover:scale-105 hover:shadow-xl transition-all">
        Update Profile
      </button>

    </form>

  </div>
</section>

