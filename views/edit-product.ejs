<%- include('./partials/header') %>

<section class="min-h-screen pt-32 px-6
                bg-gradient-to-br from-indigo-700 via-purple-700 to-pink-600
                text-white">

  <div class="max-w-3xl mx-auto bg-white/10 backdrop-blur-2xl border border-white/20
              rounded-3xl p-8">

    <h1 class="text-3xl font-extrabold mb-6 text-yellow-300">Edit Product</h1>

<form action="/owners/products/edit/<%= product._id %>" method="POST" class="space-y-4">

  <div>
    <label class="block mb-1">Name</label>
    <input type="text" name="name" value="<%= product.name %>"
           class="w-full px-4 py-2 rounded-lg text-black" required />
  </div>

  <div>
    <label class="block mb-1">Image (Optional)</label>
    <input type="text" name="image" value="<%= product.image %>"
           class="w-full px-4 py-2 rounded-lg text-black"
           placeholder="Leave blank to keep existing image" />
  </div>

  <div>
    <label class="block mb-1">Price</label>
    <input type="number" name="price" value="<%= product.price %>"
           class="w-full px-4 py-2 rounded-lg text-black" required />
  </div>

  <div>
    <label class="block mb-1">Discount (%)</label>
    <input type="number" max="35" name="discount" value="<%= product.discount %>"
           class="w-full px-4 py-2 rounded-lg text-black" />
  </div>

  <button type="submit"
          class="px-6 py-3 rounded-xl font-semibold
                 bg-gradient-to-r from-yellow-300 to-orange-400
                 text-zinc-900 hover:scale-105 transition">
    Update Product
  </button>

</form>


  </div>
</section>
